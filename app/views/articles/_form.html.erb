<% if @article.errors.any? %>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.collection_select :category_id,@categories, :id, :name,{}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :body, class: "form-control ckeditor", rows: 8 %>
  </div>
  <div>
    <%= f.submit "Publish", name: "submit_publish",class: "btn btn-primary" %>
    <%= f.submit "Save as Draft", name: "submit_draft", class: "btn btn-info" %>
  </div>
<% end %>