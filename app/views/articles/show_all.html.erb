<% @articles.each do |a| %>
<div>
  <h2><%= link_to a.title, articles_show_path(a) %></h2>
  <span><b><%= a.created_at.strftime("%m/%d/%Y") %></b></span>
  <span><b><%= link_to a.user.username, author_articles_path(a.user) %></b></span>
  <div>
    <%= truncate(a.body, length: 900, escape: false) %>
  </div>
</div>
<% end %>